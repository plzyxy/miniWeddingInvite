/* pages/pics/pics.wxss */

swiper {
  height: 375rpx;
}

.haibao {
  width: 100%;
  height: 375rpx;
}

.imageBener {
  width: 100%;
  height: 100%;
}

.listStyle {
  width:700rpx;
  margin-top: 24rpx;
  border-radius: 8px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 3rpx solid #fff;
  box-shadow: #f5f5f5 0px 0px 10px 5px;
}

.rowView {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx;

}

.title {
  color: #d4237a;
  font-size: 16px;
  background-color: #fff;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  padding: 10rpx 40rpx;

}

.moreView {
  color: #d4237a;
  font-size: 12px;
  border-top-right-radius: 5px;
  background-color: #fff;
  padding: 20rpx 40rpx;
  

}

.imageItem {
  width: 100%;
  height: auto;
  min-height: 375rpx;
  background-color: #fff;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.bottomView {
  height: 10px;
}

.pageStyle {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f1f1f1;
  position: absolute;
}

.musicView {
  width: 100rpx;
  position: fixed;
  right: 10rpx;
  top: 10rpx;
}

.banneredit {
  width: 100rpx;
  position: fixed;
  left: 10rpx;
  top: 10rpx;
}

.login{
  width: 100rpx;
  position: fixed;
  left: 10rpx;
  top: 100rpx;
}

.musicImg {
  width: 60rpx;
  height: 60rpx;
}

.edit-item-image-wrapper {
  display: flex;
  flex-flow: row;


}

.edit-item-image {
  width: 90rpx;
  height: 90rpx;
  margin: 10rpx;

}

.music_icon {
  animation: musicRotate 3s linear infinite;
}

.music_play {
  width: 28rpx;
  height: 60rpx;
  margin-left: -5px;
  transform-origin: top;
  -webkit-transform: rotate(20deg);
}

.playImg {
  animation: musicStop 1s linear forwards;
}

.pauseImg {
  animation: musicStart 1s linear forwards;
}

@-webkit-keyframes musicRotate {
  from {
    -webkit-transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}

@-webkit-keyframes musicStop {
  from {
    -webkit-transform: rotate(20deg);
  }

  to {
    -webkit-transform: rotate(0deg);
  }
}

@-webkit-keyframes musicStart {
  from {
    -webkit-transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(20deg);
  }
}

.update-tips {
  display: flex;
  justify-content: center;

}

