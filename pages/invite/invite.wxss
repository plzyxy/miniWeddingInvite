/* pages/invite/invite.wxss */

.pageStyle {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #d4237a;
}

.inviteView {
  width: 650rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
  border: 3rpx solid #fff;
  box-shadow: #f5f5f5 0px 0px 10px 5px;
}

.sc-view {
  height: 100%;
  padding-left: 100rpx;
}

.tx-wrapper {
  display: flex;
  flex-direction: column;
}

.backImage {
  width: 650rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding-top: 1px;
}

.backImage image {
  margin: auto;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  width: 648rpx;



}

.titlename {
  margin-top: 10rpx;
  color: #d4237a;
  font-size: 20px;
  font-weight: bold;
  padding: 10rpx;
  text-align: center;
}

.msgtext {
  color: #000;
  font-size: 16px;
  text-align: center;
  padding: 10rpx;
}

.send_btn {
  color: #fff;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  background: #d4237a;
  margin-top: 20rpx;
  margin-bottom: 20rpx;

}

.v-btn-confirm{
  text-align: center;
  height: 50rpx;
  padding: 10rpx;
  line-height: 50rpx;
  background-color: #eb4e5b;
  border-radius: 36rpx;
  width: 250rpx;
  align-self: center;
  color: #ffffff;
}
.edit-neme-wrapper{
  align-self: center;


}
.v-btn {
  margin-top: 20rpx;
  text-align: center;
  height: 50rpx;
  padding: 10rpx;
  line-height: 50rpx;
  background-color: #e2d4d5;
  border-radius: 36rpx;
  width: 250rpx;
  align-self: center;
  color: #3e4141;
}

.v-edit-name {
  text-align: center;
}
.send_ipt {
  width: 500rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin: 20rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #e5f5f5;
  border-radius: 5px;
}

.zan-dialog--show .zan-dialog__container{
  display: flex;
  flex-direction: column;
  justify-items: center;
  justify-content: center;
}